{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Figma Desktop",
  "version": "0.1.0",
  "identifier": "com.figma-wrapper.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Figma Desktop",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "transparent": false,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": true,
        "focus": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.figma.com https://www.figma.com; style-src 'self' 'unsafe-inline' https://*.figma.com; img-src 'self' data: https: blob:; font-src 'self' data: https:; connect-src 'self' https: wss:; frame-src https://*.figma.com https://www.figma.com"
    }
  },
  "plugins": {
    "http": {
      "enabled": true,
      "scope": ["https://**", "http://**"]
    },
    "store": {
      "enabled": true
    },
    "notification": {
      "enabled": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Figma Desktop with Proxy Support",
    "longDescription": "A desktop wrapper for Figma with built-in proxy and VPN support for regions with network restrictions.",
    "copyright": "Copyright 2024",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
